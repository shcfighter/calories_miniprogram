/* pages/venue-mes/venue-mes.wxss */
.scroll{
  width:100%;
  height:100%;
  background: #ededf2;
}
.venue_banner{
  width:100%;
  height:452rpx;
  position: relative;
}
.venue_banner image{
  width:100%;
  height:100%;
}
.swipe-btn-wrapper {
    position: absolute;
    left: 24rpx;
    bottom:20rpx;
    z-index: 20;
    width: 80rpx;
    text-align: center;
    height:80rpx;
    background: rgba(0, 0, 0, 0.5);
    border-radius: 50%;
    color:#fff;
    line-height: 80rpx;
}
.swipe-btn-wrapper text{
  font-size: 22rpx;
}
.swipe-btn-wrapper text.current{
  font-size: 28rpx;
}
.course_mes,.company-mes{
  width:100%;
  background: #fff;
  padding:0 20rpx 10rpx;
}
.business_hours{
  height:123rpx;
  border-bottom: 1rpx solid #ededf2;
}
.business_hours,.address{
  position: relative;  
}
.business_hours image.time,.address image.address_img{
  position: absolute;
  left:0;top:0;bottom:0;
  margin:auto;
  width:38rpx;
  height:38rpx;
}
.business_hours image.telephone,.address image.nav{
  position: absolute;
  right:10rpx;top:0;bottom:0;
  margin:auto;
}
.business_hours image.telephone{
   width:47rpx;
  height:47rpx;
}
.address image.nav{
  width:42rpx;
  height:52rpx;
}
.business_hours text,.address text{
  display: inline-block;
  width:612rpx;
  padding-left: 50rpx;
  color:#222222;
  box-sizing: border-box;
  border-right:1rpx solid #dcdddd;
}
.business_hours text{
  height:52rpx;
  position: absolute;
  top:0;bottom:0;margin:auto;
  line-height: 52rpx;
}
.address text{
  margin: 34rpx 0rem;
  padding-right: 27rpx;
}
.course_mes .course_title{
  position: relative;
  width:100%;
  height:105rpx;
  line-height: 130rpx;
}
.course_mes .course_title text{
  font-size: 32rpx;
  color:#222222;
  font-weight: bold;
}
.lable{
  display: inline-block;
  padding:0 8rpx;
  height:39rpx;
  text-align: center;
  line-height: 39rpx;
  font-size: 23rpx;
  border: 1rpx solid #dcdddd;
  color:#777777;
  border-radius: 6rpx;
  margin-right: 16rpx;
}
.prize,.company-mes{
  margin-top: 13rpx;  
}
.prize{
  width:100%;
  min-height: 500rpx;
  background: #fff;
  padding-top:8rpx;
  padding-bottom: 30rpx;
}
.prize_title{
  width:100%;
  height:78rpx;
  line-height: 78rpx;
}
.prize_title text:first-child{
  display: inline-block;
  width:16rpx;
  height:16rpx;
  background: #6c7eff;
  margin-right: 10rpx;
}
.prize_title text:last-child{
  color:#222222;
}
.peize_lists{
  width:100%;
  padding:0 26rpx;
}
.peize_lists text{
  display: block;
  color:#777777;
  margin-bottom: 20rpx;
}